<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RumayshoMobile" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/fg</item>
        <item name="colorOnPrimary">@color/bg</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/bg</item>
        <item name="colorOnSecondary">@color/fg</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/statusBarColor</item>
        <item name="android:navigationBarColor">@color/statusBarColor</item>
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@color/bg</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="NoActionBar" parent="Theme.RumayshoMobile">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/fg</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>